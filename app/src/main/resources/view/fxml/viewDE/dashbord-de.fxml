<BorderPane fx:id="root" prefHeight="409.0" prefWidth="559.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.DashboardDEController">
