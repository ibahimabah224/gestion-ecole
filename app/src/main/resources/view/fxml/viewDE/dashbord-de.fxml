        </JFXButton>
        <JFXButton alignment="BOTTOM_LEFT" graphicTextGap="8.0" onAction="#logout" styleClass="btnMenu" text="Deconnexion">
          <graphic>
            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../../img/logout.png" />
              </image>
            </ImageView>
          </graphic>
          <font>
            <Font size="19.0" />
          </font>
        </JFXButton>
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
